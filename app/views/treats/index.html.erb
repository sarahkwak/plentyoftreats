<p id="notice"><%= notice %></p>

<h1>Listing Treats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treats.each do |treat| %>
      <tr>
        <td><%= treat.name %></td>
        <td><%= treat.description %></td>
        <td><%= treat.amount %></td>
        <td><%= link_to 'Show', treat %></td>
        <td><%= link_to 'Edit', edit_treat_path(treat) %></td>
        <td><%= link_to 'Destroy', treat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

